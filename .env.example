# Luxury Supply Chain Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# SECURITY - CRITICAL FOR PRODUCTION
# ==========================================

# JWT Secret - Generate with: openssl rand -base64 32
# REQUIRED in production, auto-generated in development
JWT_SECRET=your-secure-jwt-secret-here-min-32-chars

# ==========================================
# USER AUTHENTICATION
# ==========================================

# Enable default users initialization (set to false in production)
INIT_DEFAULT_USERS=true

# Default user passwords (only used if INIT_DEFAULT_USERS=true)
# Change these immediately in production!
LUXEBAGS_ADMIN_PASSWORD=SecurePassword123!
LUXEBAGS_MANAGER_PASSWORD=SecurePassword123!
ITALIANLEATHER_ADMIN_PASSWORD=SecurePassword123!
ITALIANLEATHER_OPS_PASSWORD=SecurePassword123!
CRAFTWORKSHOP_ADMIN_PASSWORD=SecurePassword123!
CRAFTWORKSHOP_PROD_PASSWORD=SecurePassword123!
LUXURYRETAIL_ADMIN_PASSWORD=SecurePassword123!
LUXURYRETAIL_STORE_PASSWORD=SecurePassword123!

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Node environment (development, production, test)
NODE_ENV=development

# Server port
PORT=4000

# Brand and organization settings
BRAND_ID=luxebags
ORG_ID=luxebags
USER_ID=admin

# ==========================================
# API CONFIGURATION
# ==========================================

# API ports
CONSENSUS_API_PORT=4000
CUSTOMER_API_PORT=3002

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==========================================
# HYPERLEDGER FABRIC
# ==========================================

# Network configuration
NETWORK_NAME=luxury-supply-chain
COMPOSE_PROJECT_NAME=luxe-bags_luxury-supply-chain

# Fabric versions
IMAGE_TAG=2.5.5
CA_IMAGE_TAG=1.5.7

# Generated network path
GENERATED_NETWORK_PATH=./generated-test

# ==========================================
# CUSTOMER GATEWAY
# ==========================================

# QR Code secret for encryption
QR_SECRET=your-qr-encryption-secret-here

# Base URL for QR codes and links
BASE_URL=http://localhost:3000

# ==========================================
# NOTIFICATIONS
# ==========================================

# Email provider (sendgrid, ses, smtp, console)
EMAIL_PROVIDER=console

# SMS provider (twilio, sns, console)
SMS_PROVIDER=console

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Twilio (if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# ERP INTEGRATION
# ==========================================

# ERP type (mock, sap, oracle)
ERP_TYPE=mock

# SAP Settings (if ERP_TYPE=sap)
SAP_BASE_URL=https://sap.example.com
SAP_API_KEY=your-sap-api-key

# Oracle Settings (if ERP_TYPE=oracle)
ORACLE_BASE_URL=https://oracle.example.com
ORACLE_API_KEY=your-oracle-api-key

# ==========================================
# AI INTEGRATION (Phase 6)
# ==========================================

# AI service enabled
AI_ENABLED=false

# AI service endpoint
AI_SERVICE_URL=http://localhost:5000

# AI API key
AI_API_KEY=your-ai-service-api-key

# ==========================================
# DATABASE (Future)
# ==========================================

# Database type (json, postgres, mongodb)
DB_TYPE=json

# PostgreSQL (if DB_TYPE=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=luxury_supply_chain
POSTGRES_USER=dbuser
POSTGRES_PASSWORD=dbpassword

# MongoDB (if DB_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/luxury_supply_chain

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable metrics collection
METRICS_ENABLED=false

# Prometheus metrics port
METRICS_PORT=9090

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable debug mode
DEBUG=false

# Enable TLS verification (set to false for development only)
TLS_VERIFY=true

# Mock mode for testing without Fabric
MOCK_FABRIC=false