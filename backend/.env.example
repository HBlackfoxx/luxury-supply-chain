# Backend Environment Configuration

# Organization Configuration
# Options: luxebags, italianleather, craftworkshop, luxuryretail
ORGANIZATION=luxebags

# Port Configuration
# Default ports: luxebags:4000, italianleather:4001, craftworkshop:4002, luxuryretail:4003
PORT=4000

# Fabric User Configuration
ORG_ID=luxebags
USER_ID=Admin

# Database Configuration
DB_TYPE=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=luxury_supply_chain
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# File Storage
UPLOAD_DIR=./uploads

# Notification Service
EMAIL_ENABLED=true
SMS_ENABLED=false
WEBHOOK_ENABLED=true

# Metrics
METRICS_PORT=9090

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000

# Customer Gateway URL (for customer operations)
CUSTOMER_GATEWAY_URL=http://localhost:3010

# Fabric Network Configuration
FABRIC_CA_HOST=localhost
FABRIC_CA_PORT=7054
FABRIC_PEER_HOST=localhost
FABRIC_PEER_PORT=7051
FABRIC_ORDERER_HOST=localhost
FABRIC_ORDERER_PORT=7050

# Channel and Chaincode
CHANNEL_NAME=luxury-supply-chain
CHAINCODE_NAME=luxury-supply-chain
CONSENSUS_CHAINCODE_NAME=2check-consensus